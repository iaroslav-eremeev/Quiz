<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iaroslaveremeev.quiz.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Label text="Choose the way to load questions:">
      <font>
         <Font size="18.0" />
      </font></Label>
   <HBox alignment="CENTER">
      <children>
          <Button minWidth="150.0" onAction="#loadFromInternet" text="From Internet">
            <HBox.margin>
               <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
            <font>
               <Font size="14.0" />
            </font>
         </Button>
      </children>
   </HBox>
   <Button minWidth="150.0" onAction="#loadFromFile" text="From File">
      <font>
         <Font size="14.0" />
      </font>
   </Button>
   <CheckBox fx:id="showCorrectAnswers" mnemonicParsing="false" text="Show correct answers">
      <font>
         <Font size="14.0" />
      </font></CheckBox>
</VBox>
